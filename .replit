modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AWS SG Mapper Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AWS SG Mapper"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "HTML Server"

[[workflows.workflow]]
name = "AWS SG Mapper Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python aws_sg_mapper.py --profiles default --debug --clear-cache"

[[workflows.workflow]]
name = "AWS SG Mapper"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python aws_sg_mapper.py --profiles default --debug --clear-cache --output out/sg_map.html"

[[workflows.workflow]]
name = "HTML Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p out && python -m http.server --bind 0.0.0.0 3000 --directory out"
waitForPort = 3000

[deployment]
run = ["sh", "-c", "python aws_sg_mapper.py --profiles default --debug --clear-cache"]

[[ports]]
localPort = 3000
externalPort = 80
